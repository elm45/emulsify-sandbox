{% set teaser_list_base_class = 'teaser-list' %}

<section {{ bem(teaser_list_base_class) }}>
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_base_class: 'heading',
    heading_blockname: teaser_list_base_class,
    heading_level: 2,
    heading: teaser_list_heading,
    heading_link_blockname: teaser_list_base_class,
  } %}
  {% block teaser_list_teasers %}
    {% for teaser in teasers %}
      {% include "@molecules/teaser/teaser.twig" with {
        teaser_link: teaser.teaser_link,
        teaser_heading: teaser.teaser_heading,
        teaser_text: teaser.teaser_text,
      } %}
    {% endfor %}
  {% endblock %}
</section>
